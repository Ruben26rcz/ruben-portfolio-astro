<style>
	.hero {
		padding-block: 2rem;
		& > *:not(:last-child) {
			margin-bottom: 1.5rem;
		}
		& span {
			color: var(--neutral-500);
		}
	}
	#mern-chips {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		color: var(--neutral-50);
	}
	#accent {
		color: var(--primary-400);
	}
	.text-css {
		& div {
			padding-left: 2rem;
			display: flex;
			gap: 0.5rem;
		}
		& p:not(#relevant-text) {
			color: var(--neutral-500);
		}
	}
	h1 {
		font-size: var(--title-medium);
	}
	h2 {
		font-size: var(--title-small);
	}
	.postdata {
		text-align: center;
		padding-block: 2rem;
		& > p {
			padding-bottom: 1rem;
		}
	}
</style>
