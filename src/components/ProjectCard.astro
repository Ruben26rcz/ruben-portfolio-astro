---
import Chip from '@/components/Chip.astro'
import arrowDiagonal from '@/assets/svg/diagonal-arrow.svg'
import '../styles/animations.css'

import type { CollectionEntry } from 'astro:content'

interface Props {
	project: CollectionEntry<'work'>
}

const { data, slug } = Astro.props.project
---

<a href={`/work/${slug}`} class='project-card'>
	<img
		class='card-image'
		src={data.cover}
		alt={data.cover_alt || ''}
		loading='lazy'
		decoding='async'
		width='412'
		height='344'
	/>
	<h2>{data.title.toUpperCase()} <img src={arrowDiagonal.src} alt='diagonal pixel arrow' width='20' height='20' /></h2>
	<div class='chips'>
		{data.chips.map((chip) => <Chip>{chip}</Chip>)}
	</div>
	<p class='date'>{data.description}</p>
</a>

<style>
	.project-card {
		display: block;
		background-color: var(--neutral-800);
		padding: 1rem;
		border-radius: 0.5rem;
		&:hover {
			h2 {
				animation-name: led-animation;
				animation-duration: 0.6s;
				animation-timing-function: ease-in;
				animation-iteration-count: 1;
				animation-direction: normal;
				animation-fill-mode: forwards;
			}
		}
	}
	h2 {
		display: flex;
		gap: 0.5rem;
		font-family: 'TexasLED';
		font-weight: 400;
		color: var(--primary-400);
		& img {
			width: var(--title-small);
			height: var(--title-small);
			margin-top: 0.5rem;
		}
	}
	.card-image {
		object-fit: cover;
		margin-bottom: 2rem;
		height: 344px;
		width: 100%;
	}
	.card-image[Attributes Style] {
		aspect-ratio: auto 103/86;
	}
	.chips {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	h2,
	div {
		padding-bottom: 1rem;
	}
</style>
