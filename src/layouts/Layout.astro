---
import SpeedInsights from '@vercel/speed-insights/astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import '@/styles/reset.css'
interface Props {
	title: string
	description: string | undefined
}
const { title, description } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content={description} />
		<meta name='author' content='Ruben Castillo' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<link rel='apple-touch-icon' sizes='180x180' href='/favicon/apple-touch-icon.png' />
		<link rel='icon' type='image/png' sizes='32x32' href='/favicon/favicon-32x32.png' />
		<link rel='icon' type='image/png' sizes='16x16' href='/favicon/favicon-16x16.png' />
		<meta name='theme-color' content='#0a0a0a' />
		<link rel='manifest' href='/favicon/site.webmanifest' />
		<title>{title}</title>
		<!-- Facebook Meta Tags -->
		<meta property='og:url' content='https://www.rubencastillo.com/' />
		<meta property='og:type' content='website' />
		<meta property='og:title' content={title} />
		<meta property='og:description' content={description} />
		<meta property='og:image' content='/open-graph' />
		<!-- Twitter Meta Tags -->
		<meta name='twitter:card' content='summary_large_image' />
		<meta property='twitter:domain' content='rubencastillo.com' />
		<meta property='twitter:url' content='https://www.rubencastillo.com/' />
		<meta name='twitter:title' content={title} />
		<meta name='twitter:description' content={description} />
		<meta name='twitter:image' content='/open-graph' />
		<SpeedInsights />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<style is:global>
			@font-face {
				font-family: 'GeistMonoVariable';
				src: url('/fonts/GeistMonoVariableVF.ttf') format('truetype');
			}
			@font-face {
				font-family: 'TexasLED';
				src: url('/fonts/TexasLED.woff2') format('woff2');
			}
			/* Global variables */
			:root {
				/* Colors */
				--primary-50: #fbfee8;
				--primary-100: #f6fec3;
				--primary-200: #f2fe8a;
				--primary-300: #f2fd47;
				--primary-400: #f6fa2a; /* main */
				--primary-500: #eae508;
				--primary-600: #cab604;
				--primary-700: #a18407;
				--primary-800: #85670e;
				--primary-900: #715412;
				--primary-950: #422d06;

				--neutral-00: #f3f3f3;
				--neutral-50: #d9d9d9;
				--neutral-100: #bfbfbf;
				--neutral-200: #a6a6a6;
				--neutral-300: #808080;
				--neutral-400: #4d4d4d;
				--neutral-500: #333333;
				--neutral-600: #1f1f1f;
				--neutral-700: #1a1a1a;
				--neutral-800: #141414;
				--neutral-900: #0f0f0f;
				--neutral-950: #0a0a0a;

				font-size: clamp(1rem, 0.9199rem + 0.4274vw, 1.125rem); /* Fluid font from 16px(500px) to 18px(768px) */
				/* Typescale of 1.2 Minor Third */
				--title-large: 2.074rem; /* h1 33.18px */
				--title-medium: 1.728rem; /* h2 27.65px */
				--title-small: 1.44rem; /* h3 23.04px */
				--body-large: 1.2rem; /* h4 19.2px */
				--body-medium: 1rem; /* p 16px */
				--body-small: 0.833rem; /* small 13.33px */
				--body-xsmall: 0.694rem; /* 11.11px */

				--header-height: 10rem;
				--footer-height: 20rem;
			}
			@media screen and (768px <= width) {
				:root {
					/* Typescale 1.250 Major Third */
					font-size: clamp(1.125rem, 0.75rem + 0.7813vw, 1.25rem); /* Fluid font from 18px(768px) to 20px(1024px) */
					--title-large: 2.441rem; /* h1 48.83px */
					--title-medium: 1.953rem; /* h2 39.06px */
					--title-small: 1.563rem; /* h3 31.25px */
					--body-large: 1.25rem; /* h4 25px */
					--body-medium: 1rem; /* p 18px */
					--body-small: 0.8rem; /* small 16px */
					--body-xsmall: 0.64rem; /* 12.8px */
				}
			}
			@media screen and (width >= 1024px) {
				:root {
					/* Typescale 1.333 Perfect Fourth */
					font-size: 20px;
					--title-large: 3.157rem; /* h1 63.15px */
					--title-medium: 2.369rem; /* h2 47.37px */
					--title-small: 1.777rem; /* h3 35.54px */
					--body-large: 1.333rem; /* h4 26.66px */
					--body-medium: 1rem; /* p 20px */
					--body-small: 0.75rem; /* small 15px */
					--body-xsmall: 0.563rem; /* 11.26px */
				}
			}
			html {
				font-family: 'GeistMonoVariable';
				background: var(--neutral-950);
				color: var(--neutral-00);
			}
			h1 {
				font-size: var(--title-large);
			}
			h2 {
				font-size: var(--title-medium);
			}
			h3 {
				font-size: var(--title-small);
			}
			h4 {
				font-size: var(--body-large);
			}
			h5 {
				font-size: var(--body-medium);
			}
			h6 {
				font-size: var(--body-medium);
			}
			a {
				color: inherit;
				text-decoration: none;
			}
			ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			.wrapper {
				max-width: 1024px;
				margin-inline: auto;
				padding-inline: 1.5rem;
			}
			body.no-scroll {
				overflow-y: hidden;
			}
			.primary-button {
				background-color: var(--primary-400);
				color: var(--neutral-950);
				border: 1px solid var(--primary-400);
				border-radius: 1rem;
				display: flex;
				align-items: center;
				justify-content: center;
				min-height: 48px;
				padding-inline: 3rem;
				&:hover {
					background-color: var(--primary-500);
				}
			}
			.secondary-button {
				background-color: unset;
				color: var(--neutral-00);
				border: 1px solid var(--primary-400);
				border-radius: 1rem;
				display: inline-flex;
				align-items: center;
				justify-content: center;
				min-height: 48px;
				padding-inline: 2rem;
				width: 100%;
				&:hover {
					background-color: var(--neutral-600);
					color: var(--neutral-00);
				}
			}
			@media (width >= 1024px) {
				.primary-button,
				.secondary-button {
					width: fit-content;
					margin-inline: auto;
				}
			}
		</style>
	</body>
</html>
